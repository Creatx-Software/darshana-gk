{
  "kind": "collectionType",
  "collectionName": "portfolio_subcategories",
  "info": {
    "singularName": "portfolio-subcategory",
    "pluralName": "portfolio-subcategories",
    "displayName": "Portfolio Subcategory",
    "description": "Portfolio subcategories within main categories"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "sinhalaName": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::portfolio-category.portfolio-category",
      "inversedBy": "subcategories"
    },
    "galleryItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::gallery-item.gallery-item",
      "mappedBy": "subcategory"
    }
  }
}
