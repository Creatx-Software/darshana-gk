{
  "kind": "collectionType",
  "collectionName": "gallery_items",
  "info": {
    "singularName": "gallery-item",
    "pluralName": "gallery-items",
    "displayName": "Gallery Item",
    "description": "Gallery images for portfolio subcategories"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "subcategory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::portfolio-subcategory.portfolio-subcategory",
      "inversedBy": "galleryItems"
    }
  }
}
